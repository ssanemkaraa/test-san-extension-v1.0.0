{
  "manifest_version": 3,
  "name": "Test-San",
  "version": "1.0.0",
  "description": "Azure test case ve user story analizi için AI destekli QA asistanı (Ücretsiz AI desteği ile)",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.groq.com/*",
    "https://api-inference.huggingface.co/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.together.xyz/*",
    "https://api.openai.com/*",
    "http://localhost:11434/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

